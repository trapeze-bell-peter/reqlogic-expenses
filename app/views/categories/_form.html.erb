<% show_only = local_assigns.fetch :show_only, false %>

<%= form_with(model: category, local: true, id: 'category_form') do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Category', required: true %>
    </div>

    <div class="form-group col-md-2">
      <%= form.label :vat %>
      <%= form.number_field :vat, class: 'form-control', placeholder: 'VAT', min: '0', max: '100', required: true %>
    </div>

    <div class="form-group col-md-2">
      <%= form.label :unit_cost %>
      <%= form.number_field :unit_cost, class: 'form-control', placeholder: 'Unit Cost', step: '0.01' %>
    </div>
  </div>

  <% if show_only %>
    <script>
        $("#category_form input").prop("disabled", true);
    </script>
  <% else %>
    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
