#receipt-modal.modal.hide.fade{role: "dialog",
                               data: { controller: 'receipt', target: 'receipt.modal', 'receipt-addressee': email_recipient },
                               tabindex: '-1' }
  .modal-dialog#receipt-dialog
    .modal-content{align: 'center'}
      .modal-header
        %h3 Receipt
      .modal-body
        %ul#myTab.nav.nav-tabs{:role => "tablist"}
          %li.nav-item
            %a#current-receipt-tab.nav-link.active{"data-toggle" => "tab", href: "#current-receipt", role: "tab"} Current Receipt
          %li.nav-item
            %a#image-upload-tab.nav-link.link{"data-toggle" => "tab", :href => "#image-upload", :role => "tab"} Image Upload
          %li.nav-item
            %a#image-url-tab.nav-link{"data-toggle" => "tab", :href => "#image-url", :role => "tab"} Image URL
          %li.nav-item
            %a#email-receipt-tab.nav-link{"data-toggle" => "tab", :href => "#email-receipt", :role => "tab"} Email Receipt

        #myTabContent.tab-content
          #current-receipt.tab-pane.fade.show.active{"aria-labelledby" => "current-receipt-tab", :role => "tabpanel"}
            = render 'receipts/current_receipt'
          #image-upload.tab-pane.fade{"aria-labelledby" => "image-upload-tab", :role => "tabpanel"}
            = render 'receipts/receipt_upload_form'
          #image-url.tab-pane.fade{"aria-labelledby" => "image-url-tab", :role => "tabpanel"}
            = render 'receipts/receipt_image_url_form'
          #email-receipt.tab-pane.fade{"aria-labelledby" => "email-receipt-tab", :role => "tabpanel"}
            = render 'receipts/receipt_from_email_form'